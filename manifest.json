{
  "manifest_version": 2,

  "name": "Fido",
  "description": "A bundle of tools that assist and automate online learning platforms",
  "version": "0.1",

  "browser_action": {
    "default_title": "Fido",
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.myon.com/reader/index.html?a=*"],
      "js": ["contentScripts/myon.js"]
    }
  ],

  "permissions": ["tabs"]
}